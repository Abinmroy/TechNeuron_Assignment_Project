@model EmployeeTask

@{
	ViewData["Title"] = "Delete Employee Task";
}

<form asp-controller="EmployeeTask" asp-action="Delete" method="post">
	<input asp-for="TaskID" hidden />
	<div class="form-group">
		<label asp-for="TaskName"></label>
		<input asp-for="TaskName" class="form-control" readonly="true" />
	</div>
	<div class="form-group">
		<label asp-for="TaskDescription"></label>
		<input asp-for="TaskDescription" class="form-control" readonly="true" />
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-success btn-sm mt-3"><i class="bi bi-trash-fill"></i>Delete</button>
		<a asp-controller="EmployeeTask" asp-action="Index" class="btn btn-danger btn-sm mt-3">Back to List</a>
	</div>
</form>

