@model IEnumerable<Employee>

@{
	ViewData["Title"] = "Employee View";
}

<a asp-area="" asp-controller="Employee" asp-action="Create" class="text-white btn btn-success btn-sm mb-2"><i class="bi bi-plus-circle-fill"></i> Add New Employee</a>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Employee Name</th>
			<th>Employee Address</th>
			<th>Employee Description</th>
			<th>Employee Age</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var employee in Model)
		{
			<tr>
				<td>@employee.EmployeeName</td>
				<td>@employee.EmployeeAddress</td>
				<td>@employee.EmployeeDescription</td>
				<td>@employee.EmployeeAge</td>
				<td><a asp-controller="Employee" asp-action="Update" class="btn btn-primary btn-sm" asp-route-id="@employee.EmployeeID"><i class="bi bi-pencil-square"></i>Update</a></td>
				<td><a asp-controller="Employee" asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@employee.EmployeeID"><i class="bi bi-trash-fill"></i>Delete</a></td>
			</tr>
		}
	</tbody>
</table>
